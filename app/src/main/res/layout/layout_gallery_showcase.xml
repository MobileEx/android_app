<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <ProgressBar
            android:id="@+id/pbGalleryLoader"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:indeterminateTint="@color/labelDark"
            tools:visibility="visible" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:visibility="visible" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            tools:visibility="visible" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery4"
            android:layout_width="90dp"
            android:layout_height="90dp" />


        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery6"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery7"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tvPlaceholder"
            android:layout_width="90dp"
            android:layout_height="90dp" />


    </LinearLayout>

</LinearLayout>