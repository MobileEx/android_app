<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvGalleryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/label_gallery"
        android:textAlignment="textStart"
        android:textColor="@color/labelDark"
        android:textSize="18dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgAddImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/btn_add_image" />

        <ProgressBar
            android:id="@+id/pbGalleryLoader"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:indeterminateTint="@color/labelDark" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery3"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />


        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery6"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />


        <com.pilates.app.controls.GalleryUploader
            android:id="@+id/guGallery8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvImagesCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="0 / 8 Max"
        android:textAlignment="textEnd"
        android:textColor="@color/labelDark"
        android:textSize="14dp"
        android:textStyle="bold"></TextView>

</LinearLayout>